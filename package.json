{
    "name": "swapr-token-contracts",
    "version": "0.1.0",
    "description": "Contracts powering the SWPR token",
    "main": "index.js",
    "author": "Federico Luzzi <fedeluzzi00@gmail.com>",
    "license": "GPL-3.0",
    "private": true,
    "scripts": {
        "lint:eslint": "eslint \"test/**/*.ts\" \"tasks/**/*.ts\"",
        "lint:prettier": "prettier -l contracts/**/*.sol && prettier -l test/**/*.js",
        "lint:commit-message": "commitlint -e",
        "lint": "yarn lint:eslint && yarn lint:prettier",
        "test": "hardhat test",
        "test:coverage": "hardhat coverage",
        "test:gasreport": "cross-env GAS_REPORT_ENABLED=true hardhat test",
        "compile": "hardhat compile",
        "prepare": "husky install",
        "get-proof": "hardhat get-proof",
        "typechain": "typechain --out-dir=typechain --target=ethers-v5 './artifacts/contracts/**/!(*.dbg).json'",
        "deploy-token:rinkeby": "yarn typechain && hardhat deploy-token --network rinkeby --verify",
        "deploy-token:arbitrum-one": "yarn typechain && hardhat deploy-token --network arbitrumOne",
        "deploy-converter:arbitrum-testnet": "yarn typechain && hardhat deploy-converter --network arbitrumTestnet",
        "deploy-converter:rinkeby": "yarn typechain && hardhat deploy-converter --network rinkeby",
        "deploy-claimer:arbitrum-testnet": "yarn typechain && hardhat deploy-claimer --network arbitrumTestnet",
        "deploy-claimer:arbitrum-one": "yarn typechain && hardhat deploy-claimer --network arbitrumOne",
        "deploy-claimer:rinkeby": "yarn typechain && hardhat deploy-claimer --network rinkeby",
        "deploy-vested-claimer:arbitrum-testnet": "yarn typechain && hardhat deploy-vested-claimer --network arbitrumTestnet",
        "deploy-distributor:arbitrum-testnet": "yarn typechain && hardhat deploy-distributor --network arbitrumTestnet",
        "verify-deployment": "yarn typechain && hardhat verify-deployment --network mainnet",
        "create-whitelist": "ts-node whitelist-creation",
        "cache-clean": "rimraf ./whitelist-creation/**/cache"
    },
    "devDependencies": {
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-etherscan": "^2.1.6",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@openzeppelin/contracts": "^4.1.0",
        "@openzeppelin/contracts-upgradeable": "^4.3.1",
        "@typechain/ethers-v5": "^7.0.1",
        "@typechain/hardhat": "^2.3.0",
        "@types/chai": "^4.2.16",
        "@types/fs-extra": "^9.0.12",
        "@types/luxon": "^2.0.2",
        "@types/mocha": "^9.0.0",
        "babel-eslint": "^10.1.0",
        "chai": "^4.2.0",
        "cross-env": "^7.0.3",
        "decimal.js-light": "^2.5.1",
        "dotenv": "^10.0.0",
        "eslint": "^7.32.0",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.4.6",
        "fs-extra": "^10.0.0",
        "graphql": "^15.5.2",
        "graphql-request": "^3.5.0",
        "hardhat": "^2.6.2",
        "hardhat-dependency-compiler": "^1.1.1",
        "hardhat-gas-reporter": "^1.0.4",
        "husky": "^7.0.2",
        "jayson": "^3.6.4",
        "luxon": "^2.0.2",
        "merkletreejs": "^0.2.24",
        "node-fetch": "^2.6.1",
        "prettier": "^2.1.2",
        "prettier-plugin-solidity": "^1.0.0-beta.17",
        "rimraf": "^3.0.2",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.7.17",
        "ts-generator": "^0.1.1",
        "ts-node": "^10.2.1",
        "typechain": "^5.1.2",
        "typescript": "^4.4.2"
    }
}
